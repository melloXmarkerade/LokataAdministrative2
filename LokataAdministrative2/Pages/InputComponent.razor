@inherits InputBase<string?>

<div>
    <label class="form-label fw-bold">@Label</label>
    <InputText type="@Type" class="form-control w-auto" @bind-Value="Value" DisplayName="@NameDisplay" required></InputText>
    <ValidationMessage For="@(() => Value)"></ValidationMessage>
</div>

@code {
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? AnotherValue { get; set; }
    [Parameter] public string? NameDisplay { get; set; }
    [Parameter] public string? Type { get; set; } = "text";

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }
}