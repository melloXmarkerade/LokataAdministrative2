@page "/impoundVehicle"
@inject NavigationManager NavigationManager

<p style="color:red">======== NOTE: NOT FINAL CHANGES MAY APPLIED WITHOUT FURTHER NOTICE ===========</p>
<h2>Impounded Vehicle</h2>
<hr />

<h4>Vehicle List</h4>
<div class="form-group row">
    <label class=" col-md-12">Search</label>
    <div class="col-md-4">
        <input class="form-control" /> <!-- bind="*"-->
    </div>
    
</div>

&nbsp;

<div class="form-group">
    <button class="btn btn-primary">Search</button> <!--onclick="AccountSearch"-->
    <!-- <ValidationMessage For="*" /> -->
</div>

&nbsp;

<table class="table table-bordered">
    <thead>
        <tr>
            <th>TCT Number</th>
            <th>Vehicle Description</th>
            <th>Plate Number</th>
            <th>Violations</th>
            <th>Item Confiscated</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var IssueTicketDetails in ListOfDetails)
        {
            <tr>
                <td>@IssueTicketDetails.TCTNum</td>
                <td>@IssueTicketDetails.VehicleDescription</td>
                <td>@IssueTicketDetails.PlateNum</td>
                <td>@IssueTicketDetails.Violation</td>
                <td>@IssueTicketDetails.ItemConfiscated </td>
            </tr>
        }
    </tbody>
</table>

&nbsp;


<div class="form-group">
    <button class="btn btn-primary" @onclick="ViewVehicleDetails">View Vehicle Details</button>
</div>
&nbsp;
&nbsp;



<p style="color:red">======== NOTE: NOT FINAL CHANGES MAY APPLIED WITHOUT FURTHER NOTICE ===========</p>


@code {
    private void ViewVehicleDetails()
    {
        NavigationManager.NavigateTo("/VehicleDetails");
    }

    private void TrackVehicle()
    {
        NavigationManager.NavigateTo("/Tracking");
    }

    public class IssueTicketDetails
    {
        public string TCTNum { get; set; }
        public string Date { get; set; }
        public string PlaceOfApprehension { get; set; }
        public string VehicleDescription { get; set; }
        public string PlateNum { get; set; }
        public string Violation { get; set; }
        public string ItemConfiscated { get; set; }
    }

