@inherits InputBase<string?>

<div>
    <label class="form-label fw-bold">@Label</label>
    <InputText type="@Type" class="form-control" style="@Style" @bind-Value="Value" DisplayName="@NameDisplay" required></InputText>
    <ValidationMessage For="@(() => Value)"></ValidationMessage>
</div>

@code {
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string NameDisplay { get; set; } = string.Empty;
    [Parameter] public string Style { get; set; } = string.Empty;
    [Parameter] public string? Type { get; set; } = "text";

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }
}