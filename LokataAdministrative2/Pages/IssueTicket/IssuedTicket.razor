                                        <label class="form-label fw-bold">Province</label>
                                        <text class="form-control">@Citation.Address!.Province</text>
                                    </div>

                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">City</label>
										<text class="form-control">@Citation.Address.City</text>
