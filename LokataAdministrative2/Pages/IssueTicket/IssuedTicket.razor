                                    <text class="form-control w-auto">@Citation!.TctNo</text>
                                </div>

                                <div class="col-md-5">
                                    <label class="form-label fw-bold">Date Record</label>
                                    <text class="form-control w-auto">@Citation!.DateRecord</text>
                                </div>
